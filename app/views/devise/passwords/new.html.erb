<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow">
      <div class="card-header text-center bg-primary text-white">
        <h2 class="m-0">Esqueceu sua senha?</h2>
      </div>
      <div class="card-body">
        <p class="text-muted text-center">Informe seu e-mail para receber instruções de redefinição de senha.</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation" }) do |f| %>
          <!-- Campo de E-mail -->
          <div class="mb-3">
            <%= f.label :email, "E-mail", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail", disabled: true %>
          </div>

          <!-- Botão de envio -->
          <div class="text-center">
            <%= f.submit "Enviar instruções", class: "btn btn-primary btn-lg w-100" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <%= link_to "Voltar ao login", new_session_path(resource_name), class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
