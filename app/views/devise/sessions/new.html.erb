<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow">
      <div class="card-header text-center bg-primary text-white">
        <h2 class="m-0">Login</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
          <!-- Campo de E-mail -->
          <div class="mb-3">
            <%= f.label :email, "E-mail", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail" %>
            </div>
          </div>

          <!-- Campo de Senha -->
          <div class="mb-3">
            <%= f.label :password, "Senha", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock"></i></span>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Digite sua senha" %>
            </div>
          </div>

          <!-- Campo Lembrar-me -->
          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
              <%= f.label :remember_me, "Lembrar-me", class: "form-check-label" %>
            </div>
          <% end %>

          <!-- BotÃ£o de Login -->
          <div class="text-center">
            <%= f.submit "Entrar", class: "btn btn-primary btn-lg w-100" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <% if controller_name != 'registrations' %>
          <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "text-decoration-none d-block mb-2" %>
        <% end %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
